.container
  %h1.page-header
    = @project.name
    %small
      = @project.description

    = link_to edit_project_path(@project), {style: "float: right;"} do
      %i.fa.fa-pencil-square-o


  .panel.panel-default
    .panel-heading
      %h3.panel-title
        Informations

    .panel-body
      %ul
        %li
          Owner:
          = @project.owner.email
        %li
          Created:
          = @project.created_at
        %li
          Last modified:
          = @project.updated_at

  .panel.panel-default
    .panel-heading
      %h3.panel-title
        Project's tasks

        = link_to new_task_path, {class: "add-task-btn button"} do
          %i.fa.fa-plus-circle{ "aria-hidden" => "true"}

    .panel-body
      %ul
        - @project.tasks.each do |task|
          %li
            = link_to task.name, task_path(task)
